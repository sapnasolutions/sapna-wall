<script type="text/javascript">
  new Ajax.Request('/wall_posts',
  {
    method:'get',
    parameters: "?p_type=<%= p_type %>&p_id=<%= p_id %>",
    onSuccess: function(transport){
      var response = transport.responseText;
      $('sapna_wall').innerHtml = response;
    },
    onFailure: function(){ alert('Error occured while fetching wall posts, please try again later.') }
  });
</script>